# MeetingMind Environment Configuration
# Copy this file to .env and adjust values as needed
# All values shown are defaults - uncomment and modify to override

# =============================================================================
# API Configuration
# =============================================================================
# Base URL for API requests
# VITE_API_BASE_URL=http://localhost:8000
# REACT_APP_API_BASE_URL=http://localhost:8000

# WebSocket URL for real-time features
# VITE_WS_URL=ws://localhost:8000/ws
# REACT_APP_WS_URL=ws://localhost:8000/ws

# API timeout in milliseconds
# VITE_API_TIMEOUT=30000
# REACT_APP_API_TIMEOUT=30000

# Number of retry attempts for failed API calls
# VITE_API_RETRY_ATTEMPTS=3
# REACT_APP_API_RETRY_ATTEMPTS=3

# Delay between retry attempts in milliseconds
# VITE_API_RETRY_DELAY=1000
# REACT_APP_API_RETRY_DELAY=1000

# =============================================================================
# WebSocket Configuration
# =============================================================================
# Reconnection interval in milliseconds
# VITE_WS_RECONNECT_INTERVAL=5000
# REACT_APP_WS_RECONNECT_INTERVAL=5000

# Maximum number of reconnection attempts
# VITE_WS_MAX_RECONNECT_ATTEMPTS=10
# REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10

# Heartbeat interval in milliseconds
# VITE_WS_HEARTBEAT_INTERVAL=30000
# REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Message queue size for offline messages
# VITE_WS_MESSAGE_QUEUE_SIZE=100
# REACT_APP_WS_MESSAGE_QUEUE_SIZE=100

# =============================================================================
# Audio Configuration
# =============================================================================
# Audio sample rate for recording (Hz)
# VITE_AUDIO_SAMPLE_RATE=16000
# REACT_APP_AUDIO_SAMPLE_RATE=16000

# Number of audio channels (1=mono, 2=stereo)
# VITE_AUDIO_CHANNELS=1
# REACT_APP_AUDIO_CHANNELS=1

# Audio bit depth
# VITE_AUDIO_BIT_DEPTH=16
# REACT_APP_AUDIO_BIT_DEPTH=16

# Audio chunk size for processing
# VITE_AUDIO_CHUNK_SIZE=4096
# REACT_APP_AUDIO_CHUNK_SIZE=4096

# Maximum recording duration in milliseconds (default: 3 hours)
# VITE_AUDIO_MAX_RECORDING_DURATION=10800000
# REACT_APP_AUDIO_MAX_RECORDING_DURATION=10800000

# Silence detection threshold (0.0 to 1.0)
# VITE_AUDIO_SILENCE_THRESHOLD=0.01
# REACT_APP_AUDIO_SILENCE_THRESHOLD=0.01

# Silence duration before stopping in milliseconds
# VITE_AUDIO_SILENCE_DURATION=2000
# REACT_APP_AUDIO_SILENCE_DURATION=2000

# =============================================================================
# Meeting Configuration
# =============================================================================
# Maximum number of participants per meeting
# VITE_MEETING_MAX_PARTICIPANTS=50
# REACT_APP_MEETING_MAX_PARTICIPANTS=50

# Maximum meeting duration in minutes (default: 8 hours)
# VITE_MEETING_MAX_DURATION=480
# REACT_APP_MEETING_MAX_DURATION=480

# Auto-save interval for meeting data in milliseconds
# VITE_MEETING_AUTO_SAVE_INTERVAL=30000
# REACT_APP_MEETING_AUTO_SAVE_INTERVAL=30000

# Delay before generating summary after meeting ends in milliseconds
# VITE_MEETING_SUMMARY_DELAY=5000
# REACT_APP_MEETING_SUMMARY_DELAY=5000

# Action item detection keywords (comma-separated)
# VITE_MEETING_ACTION_KEYWORDS=action item,todo,follow up,next step,assign,due date,deadline,responsible for
# REACT_APP_MEETING_ACTION_KEYWORDS=action item,todo,follow up,next step,assign,due date,deadline,responsible for

# =============================================================================
# AI Configuration
# =============================================================================
# Minimum transcription length for AI processing (characters)
# VITE_AI_MIN_TRANSCRIPTION_LENGTH=50
# REACT_APP_AI_MIN_TRANSCRIPTION_LENGTH=50

# Summary update interval in milliseconds
# VITE_AI_SUMMARY_UPDATE_INTERVAL=60000
# REACT_APP_AI_SUMMARY_UPDATE_INTERVAL=60000

# Sentiment analysis window in milliseconds (default: 5 minutes)
# VITE_AI_SENTIMENT_WINDOW=300000
# REACT_APP_AI_SENTIMENT_WINDOW=300000

# Action item confidence threshold (0.0 to 1.0)
# VITE_AI_ACTION_CONFIDENCE=0.7
# REACT_APP_AI_ACTION_CONFIDENCE=0.7

# Speaker identification threshold (0.0 to 1.0)
# VITE_AI_SPEAKER_THRESHOLD=0.8
# REACT_APP_AI_SPEAKER_THRESHOLD=0.8

# =============================================================================
# UI Configuration
# =============================================================================
# Notification display duration in milliseconds
# VITE_UI_NOTIFICATION_DURATION=5000
# REACT_APP_UI_NOTIFICATION_DURATION=5000

# Search input debounce delay in milliseconds
# VITE_UI_SEARCH_DEBOUNCE=300
# REACT_APP_UI_SEARCH_DEBOUNCE=300

# Infinite scroll trigger threshold in pixels
# VITE_UI_SCROLL_THRESHOLD=100
# REACT_APP_UI_SCROLL_THRESHOLD=100

# Maximum file upload size in bytes (default: 10MB)
# VITE_UI_MAX_UPLOAD_SIZE=10485760
# REACT_APP_UI_MAX_UPLOAD_SIZE=10485760

# Supported file types (comma-separated MIME types)
# VITE_UI_SUPPORTED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp4,video/mp4,video/webm
# REACT_APP_UI_SUPPORTED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp4,video/mp4,video/webm

# =============================================================================
# Database Configuration
# =============================================================================
# Maximum database connections
# VITE_DB_MAX_CONNECTIONS=20
# REACT_APP_DB_MAX_CONNECTIONS=20

# Database connection timeout in milliseconds
# VITE_DB_CONNECTION_TIMEOUT=30000
# REACT_APP_DB_CONNECTION_TIMEOUT=30000

# Database query timeout in milliseconds
# VITE_DB_QUERY_TIMEOUT=15000
# REACT_APP_DB_QUERY_TIMEOUT=15000

# Database retry attempts
# VITE_DB_RETRY_ATTEMPTS=3
# REACT_APP_DB_RETRY_ATTEMPTS=3

# =============================================================================
# Security Configuration
# =============================================================================
# JWT token expiry in seconds (default: 1 hour)
# VITE_SECURITY_JWT_EXPIRY=3600
# REACT_APP_SECURITY_JWT_EXPIRY=3600

# Refresh token expiry in seconds (default: 7 days)
# VITE_SECURITY_REFRESH_EXPIRY=604800
# REACT_APP_SECURITY_REFRESH_EXPIRY=604800

# Password minimum length
# VITE_SECURITY_PASSWORD_MIN_LENGTH=8
# REACT_APP_SECURITY_PASSWORD_MIN_LENGTH=8

# Password requirements (true/false)
# VITE_SECURITY_PASSWORD_UPPERCASE=true
# REACT_APP_SECURITY_PASSWORD_UPPERCASE=true
# VITE_SECURITY_PASSWORD_LOWERCASE=true
# REACT_APP_SECURITY_PASSWORD_LOWERCASE=true
# VITE_SECURITY_PASSWORD_NUMBERS=true
# REACT_APP_SECURITY_PASSWORD_NUMBERS=true
# VITE_SECURITY_PASSWORD_SYMBOLS=false
# REACT_APP_SECURITY_PASSWORD_SYMBOLS=false

# Rate limiting configuration
# Authentication rate limits (5 requests per 15 minutes)
# VITE_SECURITY_AUTH_RATE_REQUESTS=5
# REACT_APP_SECURITY_AUTH_RATE_REQUESTS=5
# VITE_SECURITY_AUTH_RATE_WINDOW=900000
# REACT_APP_SECURITY_AUTH_RATE_WINDOW=900000

# API rate limits (100 requests per minute)
# VITE_SECURITY_API_RATE_REQUESTS=100
# REACT_APP_SECURITY_API_RATE_REQUESTS=100
# VITE_SECURITY_API_RATE_WINDOW=60000
# REACT_APP_SECURITY_API_RATE_WINDOW=60000

# Upload rate limits (10 uploads per minute)
# VITE_SECURITY_UPLOAD_RATE_REQUESTS=10
# REACT_APP_SECURITY_UPLOAD_RATE_REQUESTS=10
# VITE_SECURITY_UPLOAD_RATE_WINDOW=60000
# REACT_APP_SECURITY_UPLOAD_RATE_WINDOW=60000

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features (true/false)
# VITE_FEATURE_AI_INSIGHTS=true
# REACT_APP_FEATURE_AI_INSIGHTS=true
# VITE_FEATURE_REAL_TIME_TRANSCRIPTION=true
# REACT_APP_FEATURE_REAL_TIME_TRANSCRIPTION=true
# VITE_FEATURE_SENTIMENT_ANALYSIS=true
# REACT_APP_FEATURE_SENTIMENT_ANALYSIS=true
# VITE_FEATURE_ACTION_ITEM_DETECTION=true
# REACT_APP_FEATURE_ACTION_ITEM_DETECTION=true
# VITE_FEATURE_SPEAKER_IDENTIFICATION=false
# REACT_APP_FEATURE_SPEAKER_IDENTIFICATION=false
# VITE_FEATURE_MEETING_ANALYTICS=true
# REACT_APP_FEATURE_MEETING_ANALYTICS=true
# VITE_FEATURE_CALENDAR_INTEGRATION=false
# REACT_APP_FEATURE_CALENDAR_INTEGRATION=false
# VITE_FEATURE_MULTI_LANGUAGE_SUPPORT=false
# REACT_APP_FEATURE_MULTI_LANGUAGE_SUPPORT=false

# =============================================================================
# Production Environment Overrides
# =============================================================================
# Uncomment and modify for production deployment

# Production API endpoints
# VITE_API_BASE_URL=https://api.meetingmind.app
# VITE_WS_URL=wss://api.meetingmind.app/ws

# Production security settings
# VITE_SECURITY_JWT_EXPIRY=1800
# VITE_SECURITY_REFRESH_EXPIRY=86400

# Production meeting limits
# VITE_MEETING_MAX_PARTICIPANTS=100
# VITE_MEETING_MAX_DURATION=720

# Production upload limits
# VITE_UI_MAX_UPLOAD_SIZE=52428800