# Streaming Server Configuration
PORT=3001
NODE_ENV=development

# RTMP Configuration
RTMP_PORT=1935
RTMP_CHUNK_SIZE=60000
RTMP_GOP_CACHE=true
RTMP_PING=30
RTMP_PING_TIMEOUT=60

# SRT Configuration
SRT_PORT=9998
SRT_LATENCY=120
SRT_MAXBW=1000000
SRT_PBKEYLEN=16

# WebRTC Configuration
WEBRTC_PORT=8443
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302
WEBRTC_CERT_PATH=/path/to/cert.pem
WEBRTC_KEY_PATH=/path/to/key.pem

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key
STREAM_KEY_LENGTH=32
DEFAULT_STREAM_EXPIRY=86400

# Database (if using external DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meetingmind_streaming
DB_USER=streaming_user
DB_PASS=streaming_password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Recording
ENABLE_RECORDING=true
RECORDING_PATH=/recordings
RECORDING_FORMAT=mp4

# Stream Limits
MAX_STREAMS=10
MAX_BITRATE=10000
MAX_RESOLUTION=1920x1080
MAX_FPS=60